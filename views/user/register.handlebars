<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card card-body">
            <img src="/img/images.png" alt="login image" class="logo"/>
            <h3 class="text-center">Account Register</h3>
            <form action="/user/register" method="POST">
                <div class="from-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control"  value="{{name}}" name="name" required>
                </div>
                <div class="from-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" value="{{email}}" name="email" required>
                </div>
                <div class="from-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control"name="password"  value="{{password}}" required>
                </div>
                <div class="from-group">
                    <label for="password">Confirm Password</label>
                    <input type="password" class="form-control"name="password2" value="{{password2}}"  required>
                </div><br/>
                    <button type="submit" class="btn btn-primary">Submit</button>
               

            </form>
        </div>
    </div>
</div>