{{#each errors}}
<div class="alert alert-danger" role="alert"> {{text}}
</div>
{{else}} {{/each}}
<div class="card">
    <div class="card-body">
        <h3>Edit Idea</h3>
        <form action="/ideas/{{idea.id}}?_method=PUT" method="POST" class="form-group">
            <input type="hidden" name "_method" value="PUT">
            <label for="title">Title</label>
            <input type="text" class="form-control" name="title" value="{{idea.title}}" />
            <label for="details">Details</label>
            <textarea type="text" class="form-control" name="details">{{idea.details}}</textarea>
            <br/>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

    </div>
</div>